#ifndef _VECTORGAUSSLEGENDREINTEGRAL_
#define _VECTORGAUSSLEGENDREINTEGRAL_

#include <vector>
#include <math.h>
#include "RealVector.h"

class VectorGaussLegendreIntegral {
    private:
    protected:
        std::vector<double> position, weight;
    public:
        VectorGaussLegendreIntegral();
        virtual ~VectorGaussLegendreIntegral();

        virtual RealVector integrate(RealVector (*f)(int*, double), int *obj, 
                                     double a, const RealVector &apoint, 
                                     double b, const RealVector &bpoint); // Integral over the interval [a, b]

        virtual RealVector average(RealVector (*f)(int*, double x), int *obj, 
                                   double a, 
                                   double b);   // Average over the interval [a, b]
};

#endif // _VECTORGAUSSLEGENDREINTEGRAL_

